.row
  .col-lg-12
    %h2.text-center Sign up

    .row.center-block
      .col-lg-4.col-lg-offset-4.col-sm-6.col-sm-offset-3.m-t-1
        = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'panel') do |f|
          = devise_error_messages!
          .form-group-lg.m-t-1
            = f.email_field :email, autofocus: true, placeholder: :email, class: 'form-control input-lg'
          .form-group-lg.signin-password.m-t-1
            = f.password_field :password, autocomplete: 'off', placeholder: :password, class: 'form-control input-lg'
          .form-group-lg.signin-password.m-t-1
            = f.password_field :password_confirmation, autocomplete: 'off', placeholder: :password_confirmation, class: 'form-control input-lg'
          .form-group-lg.m-t-1
            = f.submit 'Sign up', class: 'btn btn-primary btn-lg btn-block'
        Do you have an account already?
        = link_to 'Log in', new_user_session_path, class: 'text-bg text-slim'
