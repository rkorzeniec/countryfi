.row
  .col-lg-4.center.text-center
    %h2 Sign up

.row
  .col-lg-4.center
    = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f|
      = devise_error_messages!

      .form-group-lg
        = f.label :email
        = f.email_field :email, autofocus: true, class: 'form-control'

      .form-group-lg
        = f.label :password
        - if @minimum_password_length
          %em= "#{@minimum_password_length} characters minimum"
        = f.password_field :password, autocomplete: 'off', class: 'form-control'

      .form-group-lg
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'

      .form-group
        = f.submit 'Sign up', class: 'btn btn-primary btn-lg'

    = render 'devise/shared/links'
