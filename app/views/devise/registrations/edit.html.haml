.d-flex.flex-row.justify-content-center
  %h2.text-center.text-lg Update profile
.d-flex.flex-row.justify-content-center.mt-3.mb-3.row
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'w-100 col-xs-12 col-sm-10 col-md-8 col-lg-5 col-xl-4' }) do |f|
    = render 'devise/shared/error_messages', resource: resource
    .form-group
      = f.email_field :email, autofocus: true , placeholder: :email, class: 'form-control'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for:
        = resource.unconfirmed_email
    .form-group
      = f.password_field :password, autocomplete: 'off', placeholder: :new_password, class: 'form-control'
    .form-group
      = f.password_field :password_confirmation, autocomplete: 'off', placeholder: :new_password_confirmation, class: 'form-control'
    .form-group
      = f.password_field :current_password, autocomplete: 'off', placeholder: :current_password, class: 'form-control'
    .form-group
      = f.submit 'Update', data: { "disable-with": "Updating..." }, class: 'btn btn-primary btn-block'
