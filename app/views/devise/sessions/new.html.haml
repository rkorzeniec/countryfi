.row
  .col-lg-12
    %h2.text-center Log in

    .row.center-block
      .col-lg-4.col-lg-offset-4.col-sm-6.col-sm-offset-3.m-t-1
        = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'panel') do |f|
          = devise_error_messages!
          .form-group-lg.m-t-1
            = f.email_field :email, autofocus: true, placeholder: :email, class: 'form-control input-lg'
          .form-group-lg.signin-password.m-t-1
            = f.password_field :password, autocomplete: 'off', placeholder: :password, class: 'form-control input-lg'
            = link_to 'Forgot password?', new_password_path(:user), class: 'forgot'
          .form-group.m-t-1
            = f.submit 'Log in', data: { "disable-with": "Logging in..." }, class: 'btn btn-primary btn-lg btn-block'
        Don't have an account yet?
        = link_to 'Sign up', new_user_registration_path, class: 'text-bg text-slim'
