.d-flex.flex-row.justify-content-center
  %h2.text-center.text-lg Forgot your password?

.d-flex.flex-row.justify-content-center.mt-3.mb-3.row
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'w-100 col-xs-12 col-sm-10 col-md-8 col-lg-5 col-xl-4' }) do |f|
    = render 'devise/shared/error_messages', resource: resource
    .form-group
      = f.email_field :email, autofocus: true, placeholder: :email, class: 'form-control'
    .form-group
      = f.submit 'Send me reset password instructions', data: { "disable-with": "Sending..." }, class: 'btn btn-primary btn-block'
      = link_to 'Cancel', new_session_path(resource_name), class: 'btn btn-secondary btn-block'
