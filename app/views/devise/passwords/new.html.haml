.row
  .col-lg-12
    %h2.text-center Forgot your password?

    .row.center-block
      .col-lg-4.col-lg-offset-4.col-sm-6.col-sm-offset-3.m-t-1
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .form-group-lg.m-t-1
            = f.email_field :email, autofocus: true, placeholder: :email, class: 'form-control input-lg'
          .form-group.m-t-1
            = f.submit 'Send me reset password instructions', class: 'btn btn-primary btn-lg btn-block'
            = link_to 'Cancel', new_session_path(resource_name), class: 'btn btn-default btn-lg btn-block'
