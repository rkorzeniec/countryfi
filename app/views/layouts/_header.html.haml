#main-navbar.navbar.navbar-inverse{ role: 'navigation' }
  .navbar-inner
    .navbar-header
      = link_to 'Countryfier', root_path, id: 'logo', class: 'margin-l-10 navbar-brand'
    #main-navbar-collapse.collapse.navbar-collapse.main-navbar-collpase
      %ul.nav.navbar-nav.pull-right.right-navbar-nav
        - if user_signed_in?
          %li= link_to 'Profile', '#'
          %li= link_to 'Add checkin', new_checkin_path
          %li.dropdown
            = link_to 'My countries', '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
            %ul.dropdown-menu
              %li= link_to 'World', checkins_path
              %li= link_to 'Africa', checkins_path(map: 'africa')
              %li= link_to 'Asia', checkins_path(map: 'asia')
              %li= link_to 'Australia', checkins_path(map: 'australia')
              %li= link_to 'Europe', checkins_path(map: 'europe')
              %li= link_to 'North America', checkins_path(map: 'north_america')
              %li= link_to 'South America', checkins_path(map: 'south_america')
          %li= link_to 'Edit Profile', edit_user_registration_path
          %li= link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Countries database', countries_path
          %li= link_to 'Sign in', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
