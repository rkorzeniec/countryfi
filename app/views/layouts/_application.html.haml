%html{ lang: 'en' }
  %head
    = render 'layouts/head'
    = yield :css
  %body.d-flex.flex-column.h-100.sticky-footer-wrapper{ class: "#{ yield :page_specific_body_class }", data: { user_preferences_color: "#{current_user&.color}" } }
    %header
      = render 'layouts/top_navigation', hide_toggle_button: true
    %main.flex-shrink-0.mt-4.flex-fill{ role: 'main'}
      .container.mt-5
        = render 'layouts/flash'
        = yield
    %footer.footer.mt-auto.py-3
      = render 'layouts/footer'
    = yield :js
