- hide_toggle_button ||= false

#main-navbar.navbar.navbar-inverse{ role: 'navigation' }
  - unless hide_toggle_button
    %button#main-menu-toggle{ 'type' => 'button' }
      %i.navbar-icon.fa.fa-bars.icon
      %span.hide-menu-text
  .navbar-inner
    .navbar-header
      - logo_path = user_signed_in? ? dashboard_path : root_path
      = link_to logo_path, class: 'navbar-brand' do
        %i.fa.fa-check
        Countryfier
      %btn.navbar-toggle.collapsed{ 'data-toggle' => 'collapse', 'data-target' => '#main-navbar-collapse' }
        %i.navbar-icon.fa.fa-bars.icon
    #main-navbar-collapse.collapse.navbar-collapse.main-navbar-collpase
      %ul.nav.navbar-nav.pull-right.right-navbar-nav
        - if user_signed_in?
          %li
            = link_to new_checkin_path do
              %span.text-sm
                %i.fa.fa-plus
                Add checkin
          %li= link_to 'Explore', explore_path
          %li.dropdown
            %a.dropdown-toggle{href: '#', 'data-toggle': 'dropdown'}
              My checkins
              %span.caret.hidden-xs
            %ul.dropdown-menu
              %li
                = link_to checkins_worlds_path do
                  %span.mm-text World Checkins
              %li
                = link_to checkins_europeans_path do
                  %span.mm-text Europe Checkins
              %li
                = link_to checkins_north_americans_path do
                  %span.mm-text Noth America Checkins
              %li
                = link_to checkins_south_americans_path do
                  %span.mm-text South America Checkins
              %li
                = link_to checkins_asians_path do
                  %span.mm-text Asia Checkins
              %li
                = link_to checkins_africans_path do
                  %span.mm-text Africa Checkins
              %li
                = link_to checkins_oceanians_path do
                  %span.mm-text Oceania Checkins
              %li
                = link_to checkins_antarcticans_path do
                  %span.mm-text Antrctica Checkins

          %li= link_to 'Edit Profile', edit_user_registration_path
          %li= link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Sign in', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
