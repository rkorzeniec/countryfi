- hide_toggle_button ||= false

#main-navbar.navbar.navbar-inverse{ role: 'navigation' }
  - unless hide_toggle_button
    %button#main-menu-toggle{ 'type' => 'button' }
      %i.navbar-icon.fa.fa-bars.icon
      %span.hide-menu-text
  .navbar-inner
    .navbar-header
      - logo_path = user_signed_in? ? dashboard_path : root_path
      = link_to logo_path, id: 'logo', class: 'margin-l-10 navbar-brand' do
        %i.fa.fa-check
        Countryfier
    #main-navbar-collapse.collapse.navbar-collapse.main-navbar-collpase
      %ul.nav.navbar-nav.pull-right.right-navbar-nav
        - if user_signed_in?
          %li= link_to 'Explore', explore_path
          %li= link_to 'Add checkin', new_checkin_path
          %li= link_to 'My checkins', checkins_worlds_path
          %li= link_to 'Edit Profile', edit_user_registration_path
          %li= link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Sign in', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
