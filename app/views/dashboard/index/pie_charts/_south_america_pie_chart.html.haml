- visited_percent = (visited_countries_count / countries_count.to_f) * 100
.stat-panel.text-center
  .stat-row
    .stat-cell.padding-sm.text-xs.text-semibold South America
  .stat-row
    .stat-cell.padding-sm
      .pie-chart#south_america_pie_chart{ 'data-percent': "#{visited_percent}" }
        .pie-chart-label
          = "#{visited_countries_count}/#{countries_count}"
:javascript
  window.PixelAdmin.init.push(function () {
    var pieChartDefaults = {
      animate: 2000,
      scaleColor: false,
      lineWidth: 6,
      lineCap: 'square',
      size: 90,
      trackColor: '#e5e5e5'
    };

    $('#south_america_pie_chart').easyPieChart($.extend({}, pieChartDefaults, {
      barColor: '#E9573F'
    }));
  });
