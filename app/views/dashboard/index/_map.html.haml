%div.mb-2{ data: { controller: 'download-svg svg-map', action: 'resize@window->svg-map#resize', download_svg_filename: 'world_map' } }
  .d-flex.flex-row.justify-content-end
    %button#download-button.btn.btn-sm.btn-outline-secondary.d-none.d-sm-block{ data: { action: 'download-svg#download', target: 'download-svg.button' } }
      %span Download map
      %i#download-spinner.spinner-border.spinner-border-sm.d-none{ role: 'status', aria: { hidden: 'true' }, data: { target: 'download-svg.spinner' } }
      %i#download-icon.fas.fa-cloud-download-alt.font-size-24{ data: { target: 'download-svg.icon' } }
  .d-flex.flex-row{ data: { controller: 'fill-map', fill_map_country_codes: @dashboard.country_code_array, fill_map_color: user_preferences_colour } }
    .flex-fill{ style: 'max-height: 700px; max-width: 1000px; margin: auto; padding-top: 0;' }
      .d-block
        = render 'dashboard/index/maps/world', dashboard: @dashboard, id: 'world-svg-map'
